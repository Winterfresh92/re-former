<%= form_for @user do |f| %>
	<%= f.label :email, 'Email:' %>
	<%= f.text_field :email, :placeholder => "example@example.com" %><br>
	<%= f.label :username, 'Username:' %>
	<%= f.text_field :username %><br>
	<%= f.label :password, 'Password:' %>
	<%= f.password_field :password %><br>
	<%= f.submit %>
<% end %>



